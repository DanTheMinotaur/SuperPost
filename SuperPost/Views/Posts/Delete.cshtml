@model SuperPost.Models.Post

@{
    ViewBag.Title = "Delete Post";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div class="row">

    <hr />
    <div class="col-md-10">
        <h4>Post <small>| @Html.DisplayFor(model => model.PostTitle)</small></h4>
        <img src="~/Content/@Html.DisplayFor(model => model.Image)" class="img-responsive" />
    </div>
    <div class="col-md-2">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete Post" class="btn btn-danger" />
            </div>
        }
    </div>
</div>
<div>
    @Html.ActionLink("Back to Home", "Index", new { controller = "Posts" }, new { @class = "btn btn-default" })
</div>