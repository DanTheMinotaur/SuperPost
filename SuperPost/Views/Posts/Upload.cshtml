@model SuperPost.Models.Post

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

<div class="form-group">
    @Html.LabelFor(model => model.Image, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @using (Html.BeginForm("Create", "PostsController", FormMethod.Post, new { @enctype = "multipart/form-data" }))
        {
           
            <label for="uploadedImage">Upload Image:</label>
            <input type="file" name="uploadedImage" id="uploadedImage" required/>
            <input type="submit" value="Upload Image" />
        }
    </div>
</div>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
