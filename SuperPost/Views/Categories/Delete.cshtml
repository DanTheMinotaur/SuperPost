@model SuperPost.Models.Category

@{
    ViewBag.Title = "Delete " + @Html.DisplayFor(model => model.CategoryName);
}

<h2>Delete</h2>

<h3>Are you sure you want to delete the @Html.DisplayFor(model => model.CategoryName) category?</h3>
<div class="row">
    <h4>Category</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.CategoryName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CategoryName)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete Category" class="btn btn-danger" />
        </div>
    }
</div>
<div class="row">
    @Html.ActionLink("Back to Categories", "Index", new { controller = "Categories" }, new { @class = "btn btn-default" })
</div>